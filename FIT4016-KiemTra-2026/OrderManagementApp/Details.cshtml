@model OrderManagementApp.Models.Order

<h2>Order Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Customer Name</dt>
            <dd class="col-sm-9">@Model.CustomerName</dd>

            <dt class="col-sm-3">Customer Email</dt>
            <dd class="col-sm-9">@Model.CustomerEmail</dd>

            <dt class="col-sm-3">Product</dt>
            <dd class="col-sm-9">@Model.Product?.Name</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Order Date</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Delivery Date</dt>
            <dd class="col-sm-9">
                @(Model.DeliveryDate.HasValue? Model.DeliveryDate.Value.ToShortDateString() : "Not delivered yet")
            </dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @(Model.DeliveryDate.HasValue ? "Delivered" : "Pending")
            </dd>
        </dl>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
